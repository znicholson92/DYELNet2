<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workingout_routine"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >

<RelativeLayout
    android:id="@+id/workingout_routine"
    android:layout_width="fill_parent"
    android:layout_height="439dp" >


	    
    <include layout="@layout/header"/>
    
    <LinearLayout
        android:id="@+id/working_out_topbar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        
        
    </LinearLayout>
    
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="339dp" >

            <LinearLayout
                android:id="@+id/linear_scroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
        
                    <include layout="@layout/columnheader"/>
                 
                    <!-- List Divider -->
                    <View android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="?android:attr/listDivider" />
                
                    <ListView
                        android:id="@+id/workingout_ex_listView"
                        android:layout_width="wrap_content"
                        android:layout_height="392dp"
                        android:orientation="horizontal" >
                    </ListView>
                   
            </LinearLayout>
            
    </HorizontalScrollView>
    
    	<SlidingDrawer
                android:id="@+id/workingout_slidingDrawer"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:content="@+id/workingout_slidingdrawer_content"
                android:handle="@+id/workingout_handle" >

            <Button
                android:id="@+id/workingout_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@android:style/Theme.Holo"
                android:text="More" />

            <LinearLayout
                android:id="@+id/workingout_slidingdrawer_content"
                android:layout_width="match_parent"
                android:layout_height="387dp"
                android:orientation="vertical" >
                
                <Button
	                android:id="@+id/workingout_newworkout_button"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Add" />
                
                <Button
	                android:id="@+id/workingout_finishworkout_button"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Finish" />
                
                <Button
	                android:id="@+id/workingout_deleteworkout_button"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Delete" />
                
            </LinearLayout>
        </SlidingDrawer>
        
    	</RelativeLayout>

     <include
         android:layout_height="24dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/workingout_slidingDrawer"
         layout="@layout/footer" />

</LinearLayout>