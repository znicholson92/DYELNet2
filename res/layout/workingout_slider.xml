<?xml version="1.0" encoding="utf-8"?>
<SlidingDrawer
    			xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/workingout_slidingDrawer"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:content="@+id/workingout_slidingdrawer_content"
                android:handle="@+id/workingout_handle" >

            <Button
                android:id="@+id/workingout_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@android:style/Theme.Holo"
                android:text="More" />

            <LinearLayout
                android:id="@+id/workingout_slidingdrawer_content"
                android:layout_width="match_parent"
                android:layout_height="387dp"
                android:gravity="center"
                android:background="#0F0202"
                android:orientation="vertical" >
                
                <Button
	                android:id="@+id/workingout_newworkout_button"
	                android:layout_width="120dp"
        			android:layout_height="60dp"
	                android:onClick="workout_addNewSet"
	                android:text="Add" />
                
                <Button
	                android:id="@+id/workingout_finishworkout_button"
	                android:layout_width="120dp"
        			android:layout_height="60dp"
	                android:visibility="gone"
	                android:text="Finish" />
                
                <Button
	                android:id="@+id/workingout_startworkout_button"
	                android:layout_width="120dp"
        			android:layout_height="60dp"
	                android:onClick = "startWorkout"
	                android:text="Start" />
                
                <Button
	                android:id="@+id/workingout_deleteworkout_button"
	                android:layout_width="120dp"
        			android:layout_height="60dp"
	                android:onClick="deleteWorkout"
	                android:visibility="gone"
	                android:text="Delete" />
                
                <Button
	                android:id="@+id/workingout_history_button"
	                android:layout_width="120dp"
        			android:layout_height="60dp"
	                android:onClick="workout_viewHistory"
	                android:text="History" />
               
                <Button
	                android:id="@+id/workingout_history_button"
	                android:layout_width="120dp"
        			android:layout_height="60dp"
	                android:onClick="clearDones"
	                android:text="Clear" />
                
                
            </LinearLayout>
        </SlidingDrawer>
