<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

	    
     <include layout="@layout/header"/>
    
    <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/linear_scroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
        
                    <!-- Column Header -->

                    <LinearLayout
                        android:id="@+id/col_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#10A3A3" >

                        <TextView android:id="@+id/col1"
                            android:layout_height="fill_parent"
                            android:layout_width="wrap_content"
                            android:text="col1"
                            android:gravity="center"
                            android:width="65dip"
                            android:height="20dip"
                        />
                        <TextView android:id="@+id/col2"
                            android:layout_height="fill_parent"
                            android:layout_width="wrap_content"
                            android:text="col2"
                            android:gravity="center"
                            android:width="65dip"
                            android:height="20dip"
                        />
                        <TextView android:id="@+id/col3"
                            android:layout_height="fill_parent"
                            android:layout_width="wrap_content"
                            android:text="col_3"
                            android:gravity="center"
                            android:width="65dip"
                            android:height="20dip"
                        />
                        <TextView android:id="@+id/col4"
                            android:layout_height="fill_parent"
                            android:layout_width="wrap_content"
                            android:text="col_4"
                            android:gravity="center"
                            android:width="65dip"
                            android:height="20dip"
                        />
                        <TextView android:id="@+id/col5"
                            android:layout_height="fill_parent"
                            android:layout_width="wrap_content"
                            android:text="col5"
                            android:gravity="center"
                            android:width="65dip"
                            android:height="20dip"
                        />
                    </LinearLayout>
                 
                    <!-- List Divider -->
                    <View android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="?android:attr/listDivider" />
                
                    <ListView
                        android:id="@+id/listView1"
                        android:layout_width="wrap_content"
                        android:layout_height="392dp"
                        android:orientation="horizontal" >
                    </ListView>
                   
            </LinearLayout>
            
    </HorizontalScrollView>

     <include layout="@layout/footer"/>

</LinearLayout>