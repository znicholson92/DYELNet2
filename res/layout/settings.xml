<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
     <include layout="@layout/header"/>
    
    <!--  Body -->
    <LinearLayout
        android:id="@+id/settings_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
    
	    <LinearLayout
	        android:layout_width="160dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:height="40dip"
	            android:text="First Name" />
	        
	        <TextView
	        android:id="@+id/textView2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:height="40dip"
	        android:text="Last Name" />
	        
	        <TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:height="40dip"
	        android:gravity="center"
	        android:text="Date of Birth" />
	        
	        <TextView
	        android:id="@+id/textView2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:height="40dip"
	        android:text="Sex" />
	        
	        <TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:height="40dip"
	        android:gravity="center"
	        android:text="Weight (LBS)" />
	        
	        <TextView
	        android:id="@+id/textView2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:height="40dip"
	        android:text="Body Fat" />

	        
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
		    <EditText
		        android:id="@+id/settings_firstname"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:height="40dip"
		        android:ems="10" />
		
		    <EditText
		        android:id="@+id/settings_lastname"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:height="40dip"
		        android:ems="10" />
		    
		    <EditText
		        android:id="@+id/settings_dateofbirth"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:height="40dip"
		        android:ems="10" />
		
		    <EditText
		        android:id="@+id/settings_sex"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:height="40dip"
		        android:ems="10" />
		    
		    <EditText
		        android:id="@+id/settings_weight"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:height="40dip"
		        android:ems="10" />
		
		    <EditText
		        android:id="@+id/settings_bodyfat"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:height="40dip"
		        android:ems="10" />
	
	    </LinearLayout>
	    
	    
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/save_userinfo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.73"
            android:gravity="center"
            android:text="Save Changes" />

        <Button
            android:id="@+id/cancel_userinfo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Cancel Changes" />
    </LinearLayout>
    
    <include layout="@layout/footer"/>


</LinearLayout>
