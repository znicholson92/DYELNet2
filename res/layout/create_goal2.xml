<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <include layout="@layout/header"/>
    

    <LinearLayout
        android:id="@+id/goal_menu_body"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/goal_menu_col1"
            android:layout_width="95dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/goal_menu_button_1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:minHeight="80dp"
                android:text="Set Goals" />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/main_menu_col2"
                android:layout_width="95dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
			<Button
                android:id="@+id/goal_menu_button_2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_marginTop="120dp"
                android:onClick=""
                android:text="Routine Goals" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_menu_col3"
                android:layout_width="95dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/goal_menu_button_3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:layout_marginTop="120dp"
                    android:onClick=""
                    android:text="User Goals" />
            </LinearLayout>
    
    </LinearLayout>
    <LinearLayout
        android:id="@+id/goal_menu_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
            <Button
                    android:id="@+id/goal_menu_button_4"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:minHeight="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="70dp"
                    android:onClick=""
                    android:text="Goal View" />
    </LinearLayout>

</LinearLayout>